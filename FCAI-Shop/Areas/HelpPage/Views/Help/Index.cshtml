@using System.Web.Http
@using System.Web.Http.Controllers
@using System.Web.Http.Description
@using System.Collections.ObjectModel
@using FCAI_Shop.Areas.HelpPage.Models
@model Collection<ApiDescription>

@{
    ViewBag.Title = "FCAI-Shop Web API Help Page";

    // Group APIs by controller
    ILookup<HttpControllerDescriptor, ApiDescription> apiGroups = Model.ToLookup(api => api.ActionDescriptor.ControllerDescriptor);
}

<link type="text/css" href="~/Areas/HelpPage/HelpPage.css" rel="stylesheet" />
<header class="help-page">
    <div class="content-wrapper">
        <div class="float-left">
            <h1>@ViewBag.Title</h1>
        </div>
    </div>
</header>
<div id="body" class="help-page">
    <section class="featured">
        <div class="content-wrapper">
            <h2>Introduction</h2>
            <p>
                FCAI Shop Web API that helps users and admins to create accounts and manipulate data.
            </p>
        </div>
    </section>
    <section class="content-wrapper main-content clear-fix">
        <h2>Account</h2>
        <table class="help-page-table">
            <thread>
        <tr><th>API</th><th>Description</th></tr>
    </thread>
    <tbody>
        <tr>
            <td class="api-name">Login</td>
            <td class="api-documentation">
                Pass your user name and passowrd and grant_type = passwords in body with calling "/Login" and returns your access token.
            </td>
        </tr>
    </tbody>
</table>
    </section>
    <section class="content-wrapper main-content clear-fix">
        @foreach (var group in apiGroups)
        {
            @Html.DisplayFor(m => group, "ApiGroup")
        }
    </section>
</div>
